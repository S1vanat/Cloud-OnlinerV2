<%- include("layouts/header") %>
    <div class="container my-4">
        <div class="row">
            <div class="col-md-12">
                <form method="POST" action="/edit" enctype="multipart/form-data">
                    <input type="hidden" name="video" value="<%= video._id %>">
                    <img class="img-fluid" src="<%= baseUrl + video.thumbnail %>">
                    <div class="form-group">
                        <label>เลือกปกคลิป</label>
                        <input type="file" accept="image/*" class="form-control-file" name="thumbnail">
                    </div>
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" name="title" class="form-control" required value="<%= video.title %>">
                    </div>
                    <div class="form-group">
                        <label>description</label>
                        <textarea name="description" rows="10" class="form-control"><%= video.description %></textarea>
                    </div>
                    <div class="form-group">
                        <label>Tags</label>
                        <input type="text" name="tags" class="form-control" value="<%= video.tags %>">
                    </div>
                    <div class="form-group">
                        <label>category</label>
                        <select name="category" class="form-control">
                            <option value="">เลือกวิชา</option>
                            <option value="Cloud" <%= video.category == "Cloud" ? "selected" : "" %>>Cloud</option>
                            <option value="ITPM"<%= video.category == "ITPM" ? "selected" : "" %>>ITPM</option>
                            <option value="DevTools"<%= video.category == "DevTools" ? "selected" : "" %>>DevTools</option>
                            <option value="ImageProcess"<%= video.category == "ImageProcess" ? "selected" : "" %>>ImageProcess</option>
                            <option value="Seminar"<%= video.category == "Seminar" ? "selected" : "" %>>Seminar</option>
                        </select>
                    </div>
                    <input type="submit" class="btn btn-warning" value="Update Video">
                </form>
            </div>
        </div>
    </div>
<%- include("layouts/footer") %>